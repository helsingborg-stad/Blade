{
    "name": "helsingborg-stad/blade",
    "description": "Use Laravel Blade in any PHP project.",
    "homepage": "https://github.com/helsingborg-stad/blade",
    "license": "MIT",
    "authors": [
        {
            "name": "Benjamin Crozat",
            "email": "benjamincrozat@me.com"
        }
    ],
    "support": {
        "issues": "https://github.com/helsingborg-stad/blade/issues"
    },
    "keywords": [
        "blade",
        "engine",
        "laravel",
        "templates"
    ],
    "require": {
        "php": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "HelsingborgStad\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HelsingborgStad\\Tests\\": "tests/phpunit/tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit --no-coverage --testdox"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    }
}
