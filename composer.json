{
    "name": "helsingborg-stad/blade",
    "description": "Use Laravel Blade in any PHP project.",
    "homepage": "https://github.com/helsingborg-stad/blade",
    "license": "MIT",
    "authors": [
        {
            "name": "Thor Brink",
            "email": "thor.brink@helsingborg.se"
        }
    ],
    "support": {
        "issues": "https://github.com/helsingborg-stad/blade/issues"
    },
    "keywords": [
        "blade",
        "engine",
        "laravel",
        "templates"
    ],
    "require": {
        "php": "7.4|^8.2",
        "illuminate/view": "^8.0.0"
    },
    "autoload": {
        "psr-4": {
            "HelsingborgStad\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HelsingborgStad\\Tests\\": "tests/phpunit/tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --no-coverage --testdox",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --testdox",
        "lint": "phpcs",
        "fix": "phpcbf"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "helsingborg-stad/phpcs": "^0.3.5",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.0"
    }
}
